<% if flash[:message] %>
  <div class="success"><%= flash[:message] %></div>
<% end %>

<h1><%= @property.title %></h1>
<div><%= @property.photo %></div>
<dl>
  <dt>Localização:</dt><dd><%= @property.property_location %></dd>
  <dt>Tamanho (m²):</dt><dd><%= @property.area %> m²</dd>
  <dt>Tipo do Imóvel:</dt><dd><%= @property.property_type %></dd>
  <dt>Quantidade de quartos:</dt><dd><%= @property.rooms %></dd>
  <dt>Máximo de pessoas:</dt><dd><%= @property.maximum_occupancy %></dd>
  <dt>Mínimo de dias para locação:</dt><dd><%= @property.minimum_rent_days %></dd>
  <dt>Máximo de dias para locação:</dt><dd><%= @property.maximum_rent_days %></dd>
  <dt>Máximo de dias para locação:</dt><dd><%= @property.maximum_occupancy %></dd>
  <dt>Valor padrão da diária:</dt><dd><%= number_to_currency(@property.daily_rate) %></dd>
  <dt>Descrição:</dt><dd><%= @property.description %></dd>
  <dt>Regras de uso:</dt><dd><%= @property.usage_rules %></dd>
</dl>

<%= link_to 'Voltar', root_path %>

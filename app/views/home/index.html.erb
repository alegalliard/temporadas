<h1>Aluguel de temporadas</h1>
<% if @properties.any? %>
  <% @properties.each do |property| %>
    <div><%= property.photo %></div>
    <h2><%= property.title %></h2>
    <dl>
      <dt>Localização:</dt> <dd><%= property.property_location %></dd>
      <dt>Tipo:</dt> <dd><%= property.property_type %></dd>
      <dt>Quartos:</dt> <dd><%= property.rooms %></dd>
      <dt>Diária:</dt> <dd><%= number_to_currency(property.daily_rate,
                                  unit: 'R$ ', separator: ',', delimiter: '') %></dd>
    </dl>
  <% end %>
<% else %>
  <div class="error">Ainda não existem imóveis para serem exibidos</div>
<% end %>
